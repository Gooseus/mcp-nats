{
  "name": "mcp-nats",
  "version": "0.1.5",
  "description": "MCP server for NATS messaging - publish, subscribe, JetStream, and KV operations",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "mcp-nats": "./dist/index.js"
  },
  "files": [
    "dist",
    "docs",
    "README.md"
  ],
  "scripts": {
    "start": "bun run src/index.ts",
    "start:sse": "bun run src/index.ts --transport=sse --port=3000",
    "dev": "bun --watch run src/index.ts",
    "dev:sse": "bun --watch run src/index.ts --transport=sse --port=3000",
    "build": "bun build src/index.ts --outdir dist --target node && sed -i.bak '1s|#!/usr/bin/env bun|#!/usr/bin/env node|' dist/index.js && rm dist/index.js.bak",
    "prepublishOnly": "npm run build",
    "test": "NATS_URL=nats://localhost:4222 NATS_CREDS_PATH= bun test",
    "test:watch": "NATS_URL=nats://localhost:4222 NATS_CREDS_PATH= bun test --watch",
    "test:up": "docker compose up -d",
    "test:down": "docker compose down",
    "test:ci": "docker compose up -d --wait && NATS_URL=nats://localhost:4222 NATS_CREDS_PATH= bun test && docker compose down",
    "inspector": "bunx @modelcontextprotocol/inspector bun src/index.ts",
    "clean": "rm -rf dist",
    "update-docs": "bun run scripts/update-docs.ts"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "nats",
    "jetstream",
    "anthropic",
    "claude",
    "ai",
    "llm"
  ],
  "author": "Shawn Marincas",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "nats": "^2.29.3",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Gooseus/mcp-nats"
  }
}
